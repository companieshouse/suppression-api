local_resource(
  name = 'dev:suppression-api:build',
  cmd = 'mvn compile',
  deps = ['src']
)

custom_build(
  ref = '416670754337.dkr.ecr.eu-west-2.amazonaws.com/suppression-api:latest',
  command = 'mvn compile jib:dockerBuild -Dimage=$EXPECTED_REF',
  live_update = [
    sync(
      local_path = './target/classes',
      remote_path = '/app/classes'
    ),
    restart_container()
  ],
  deps = ['./target/classes']
)
